<Window x:Class="AppServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppServer"
        mc:Ignorable="d"
        Title="ServerApp" Height="450" Width="600" MaxHeight="450" MinHeight="450" MaxWidth="600" MinWidth="600">
    <Grid>
        <Canvas VerticalAlignment="Top" Height="350">
            <ListBox x:Name="clientListBox" BorderBrush="Black" BorderThickness="5" Width="585" Height="350" FontSize="35" FontWeight="Bold"></ListBox>
            <TextBox x:Name="messageTxt" Canvas.Top="350" Height="60" Width="400" FontSize="40" FontWeight="Medium"></TextBox>
            <Button Click="SendButton_Click" Canvas.Top="350" Canvas.Left="405" Background="Gray" Foreground="White" Width="180" Height="60" FontWeight="Bold" FontSize="30" Content="Send"></Button>
        </Canvas>
    </Grid>
</Window>